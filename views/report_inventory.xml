<odoo>
    <template id="report_inventory_document2" inherit_id="stock.report_inventory">
    
	<xpath expr="//table[2]" position="replace">
	<table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th><strong>Lugar</strong></th>
                                        <th><strong>Producto</strong></th>
                                        <th><strong>Cantidad te√≥rica</strong></th>
                                        <th><strong>Cantidad real</strong></th>
                                        <th class="text-right"><strong>Diferencia</strong></th>
                                    </tr>
                                </thead>
				
                                <tr t-foreach="o.line_ids" t-as="line">
				    <t t-set="q1" t-value="line.product_qty"/>
				    <t t-set="q2" t-value="line.theoretical_qty"/>
                                    <t t-set="qr" t-value="q1-q2"/>
