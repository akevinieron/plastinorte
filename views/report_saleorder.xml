<odoo>
    <template id="report_saleorder2" inherit_id="sale.report_saleorder_document">
		<xpath expr="//table[1]/thead[1]/tr[1]/th[1]" position="before">
                <th><strong>Foto</strong></th>
        </xpath>
        <xpath expr="//table[1]/tbody[@class='sale_tbody']/t/tr/td" position="before">
		<td>
		<t t-if="l.product_id.image">
			<img t-if="l.product_id.image" t-att-src="'data:image/png;base64,%s' % l.product_id.image" style="max-height: 40px;"/>
		</t>
		</td>
        </xpath>


	<xpath expr="//div/h2/span[1]" position="replace">
          <span t-if="doc.state not in ['draft','sent']" >Orden de Venta #</span>
        </xpath>
	<xpath expr="//div/h2/span[2]" position="replace">
          <span t-if="doc.state in ['draft','sent']" >Cotización #</span>
        </xpath>

      <xpath expr="//div[@class='col-xs-6']" position="replace"></xpath>

      <xpath expr="//div[@class='col-xs-5 col-xs-offset-1']" position="replace">
          <div class="col-xs-5" style="margin-left:400px; height:130px;">
              <span><strong>Cliente: </strong></span> <span t-field="doc.partner_id.name"/><br/>
                <span t-if="doc.partner_id.formatedNit"> NIT: <span t-field="doc.partner_id.formatedNit"/></span>
                <span t-if="doc.partner_id.xidentification and not doc.partner_id.formatedNit"> NIT: <span t-field="doc.partner_id.xidentification"/></span>
              <address t-field="doc.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}' />

          </div>

      </xpath>

      <xpath expr="//div[@class='row mt32 mb32']" position="replace">
	<div class="row mt32 mb32" style="margin-bottom: 0px !important; font-size:15px; margin-top:10px! important; margin-bottom:0;padding-bottom:0;">
	   <div style="max-height:60px; overflow:hidden;">
                <div t-if="doc.date_order" class="col-xs-3" style="font-size:11px;">
                    <strong t-if="doc.state not in ['draft','sent']">Fecha de la Orden:</strong>
                    <strong t-if="doc.state in ['draft','sent']">Fecha de Cotización:</strong>
                    <p t-field="doc.date_order"/>
                </div>
                <div t-if="doc.user_id.name" class="col-xs-3" style="font-size:11px;">
                    <strong>Vendedor:</strong>
                    <p t-field="doc.user_id"/>
                </div>
                <div name="payment_term" t-if="doc.payment_term_id" class="col-xs-3" style="font-size:11px;">
                    <strong>Plazo de pago:</strong>
                    <p t-field="doc.payment_term_id"/>
                </div>
		<div t-if="doc.validity_date" class="col-xs-3" style="font-size:11px;">
                    <strong>Fecha de Caducidad:</strong>
                    <p t-field="doc.validity_date"/>
                </div>
	   </div>

	</div>
	<hr style="padding-top:0; margin-top:0px; padding-bottom:10px; margin-bottom:0;" />
      </xpath>

      <xpath expr="//table[1]" position="replace">

		<div style="font-size: 11px; font-weight:bold; padding: 5px 0 5px 0; width: 100%; border-bottom:1px solid black; display:block; float:left;"> 

                      <div style="width:8%; display:block; float:left;margin:0;padding:0;">
                            <span>Foto</span>
                      </div>
                      <div style="width:62%; display:block; float:left;margin:0;padding:0;">
                            <span>Descripción</span>
                      </div>
                      <div class="text-right" style="width: 10%; display:block; float:left;margin:0;padding:0;">
                           <span>Cantidad</span>
                      </div>
                      <div class="text-right" style="width: 10%; display:block; float:left;margin:0;padding:0;">
                          <span>Precio Unitario</span>
                      </div>
                        <div t-if="display_discount" class="text-right" style="width: 5%; display:block; float:left;margin:0;padding:0;">
                        <span>Descuento (%)</span>
                      </div>
                      <div class="text-right" style="width: 10%; display:block; float:left;margin:0;padding:0;">
			<span>Precio</span>
                      </div>
                   </div>


		<t t-set="i" t-value="1"/>
		<t t-set="j" t-value="1"/>

		<div t-foreach="doc.order_line" t-as="l" 
		     style="font-size:11px;">


		   <div t-if="(i-1) % 8 == 0 and i != 1" style="page-break-after: always;">
                                <strong style="font-size: 15px; float:left; display:block; margin-top:20px;">Página <span t-esc="j"/>
                                <t t-set="j" t-value="j+1"/>
                                <span t-if="doc.state not in ['draft','sent']">de Orden de Venta</span>
                                <span t-if="doc.state in ['draft','sent']">de Cotización</span>
                                <span t-field="doc.name"/></strong><br />

                        <div style="display:block; float:left; border:0; height:100px; width:100%; margin:auto;padding:70px 0 0 0;">
                                <div id="pn-right" style="float:left; width:195px;margin-right:20px; font-size:13px;">
                                  <p><strong>Recibido y aceptado por:</strong></p>
                                </div>

                                <div id="pn-right" style="float:left; width:195px;margin-right:20px;">
                                        <p style="font-size: 13px;">______________________<br />Firma / Sello</p>
                                </div>
                                <div id="pn-right" style="float:left; width:195px;">
                                        <p style="font-size: 13px;">______________________<br />NIT o C.C.</p>
                                </div>
                                <div id="pn-right" style="float:left; width:195px;">
                                        <p style="font-size: 13px;">______________________<br />Fecha</p>
                                </div>
                        </div>
                   </div>



		   <div t-if="(i-1) % 8 == 0 and j > 1" style="float:left; display:block; padding-top: 135px; width: 100%;">
		      <div style="font-size: 11px; font-weight:bold; padding: 5px 0 5px 0; width: 100%; border-bottom:1px solid black; display:block; float:left;">
			<div t-if="j > 1" style="padding-bottom:15px;">
               			<h2><span>Página</span> <span t-esc="j"/>
				<span t-if="doc.state not in ['draft','sent']">de Orden de Venta</span>
                                <span t-if="doc.state in ['draft','sent']">de Cotización</span> 
				 <span t-field="doc.name"/></h2>
            		</div>
				
                      	<div style="width:8%; display:block; float:left;margin:0;padding:0;">
                            <span>Foto</span>
                      	</div>
                      	<div style="width:62%; display:block; float:left;margin:0;padding:0;">
                            <span>Descripción</span>
                      	</div>
                      	<div class="text-right" style="width: 10%; display:block; float:left;margin:0;padding:0;">
                           <span>Cantidad</span>
                      	</div>
                      	<div class="text-right" style="width: 10%; display:block; float:left;margin:0;padding:0;">
                          <span>Precio Unitario</span>
                      	</div>
                        <div t-if="display_discount" class="text-right" style="width: 5%; display:block; float:left;margin:0;padding:0;">
                        	<span>Descuento (%)</span>
                      	</div>
                      	<div class="text-right" style="width: 10%; display:block; float:left;margin:0;padding:0;">
                        	<span>Precio</span>
                      	</div>
                      </div>

		   </div>
		   


		   <div style="padding: 5px 0 5px 0; width: 100%; border-bottom:1px solid #DADADA; display:block; float:left;">

                      <div style="width:8%; display:block; float:left;margin:0;padding:0;">
                        	<img t-if="l.product_id.image" t-att-src="'data:image/png;base64,%s' % l.product_id.image" style="max-height: 35px;"/>
                        	<span t-if="not l.product_id.image" style="color:grey;">N/A</span>
                      </div>
                      <div style="width:62%; display:block; float:left;margin:0;padding:0;">
                            <span t-field="l.name"/>
                      </div>
                      <div class="text-right" style="width: 10%; display:block; float:left;margin:0;padding:0;">
                           <span t-field="l.product_uom_qty"  groups="product.group_uom"/>
                      </div>
                      <div class="text-right" style="width: 10%; display:block; float:left;margin:0;padding:0;">
                          <span t-field="l.price_unit"/>
                      </div>
                        <div t-if="display_discount" groups="sale.group_discount_per_so_line" class="text-right" style="width: 5%; display:block; float:left;margin:0;padding:0;">
                        <span t-field="l.discount"/>
                      </div>
                      <div class="text-right" style="width: 10%; display:block; float:left;margin:0;padding:0;">
                        <span t-field="l.price_subtotal" 
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                      </div>
                   </div>


	
		<t t-set="i" t-value="i+1"/>
		</div>
      </xpath>

      <xpath expr="//div[@class='col-xs-4 pull-right']" position="replace">
        <div class="col-xs-4 pull-right" style="font-size:11px; margin-top:15px;">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Subtotal</strong></td>
                            <td class="text-right">
				 <span t-field="doc.amount_untaxed"
                                    t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                            <tr>
                                <td>Impuestos</td>
                                <td class="text-right">
				    <span t-field="doc.amount_tax"
                                    t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                        <tr class="border-black">
                            <td><strong style="font-size:20px;">Total</strong></td>
                            <td class="text-right">
				 <span style="font-size:20px;" t-field="doc.amount_total"
                                    t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
      </xpath>

      <xpath expr="//t[1]/t[1]/div[1]/p[2]" position="after">
                <div style="border:0; height:100px; width:100%; margin:auto;padding:20px 0 0 0;">
                <div id="pn-right" style="float:left; width:195px;margin-right:20px;">
                        <p><strong>Recibido y aceptado por:</strong></p>
                </div>

                <div id="pn-right" style="float:left; width:195px;margin-right:20px;">
                        <p>______________________<br />Firma / Sello</p>
                </div>
                <div id="pn-right" style="float:left; width:195px;">
                        <p>______________________<br />NIT o C.C.</p>
                </div>
                <div id="pn-right" style="float:left; width:195px;">
                        <p>______________________<br />Fecha</p>
                </div>
                 </div>
        </xpath>

	<xpath expr="//t[1]/t[1]/div[1]/p" position="replace">
                <p t-if="doc.note or doc.team_id">
                <span t-if="doc.note">
			<strong style="font-size:11px;">Información adicional:</strong>
                	<span style="font-size:11px;" t-field="doc.note"/>
		</span>
		<span t-if="doc.team_id">
			<span style="font-size:11px; font-weight:bold;">Equipo de Ventas:</span> <span style="font-size:11px;" t-field="doc.team_id"/>
		</span>
            	</p>

        </xpath>
	<xpath expr="//t[1]/t[1]/div[1]/p[2]" position="replace"></xpath>
	</template>
</odoo>
